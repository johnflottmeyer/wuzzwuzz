<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.phonegap.wuzzwuzz"
        versionCode = "1" 
        version     = "1.0" >

    <!-- versionCode is optional and Android only -->
    <preference name="orientation" value="landscape" />
    <name>WuzzWuzz</name>
    <description>
        A game for my kids, by my kids
    </description>

    <author href="https://build.phonegap.com" email="johnflottmeyer@gmail.com">
        John Flottmeyer
    </author>
    
    <gap:platform name="ios" />
	 
    <!-- universal preferences -->
    <preference name="phonegap-version"           value="cli-6.5.0" /> 
    <preference name="orientation" value="portrait" />        
    <preference name="fullscreen" value="false" />
	
	<!-- ios preferences --> 
    <preference name="target-device" value="universal" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    
    <!-- ios icons 7+ -->
    
    <!-- iPhone 6 / 6+ -->
	<icon src="images/icons/180.jpg" platform="ios" width="180" height="180" />

    <!-- iPhone / iPod Touch  -->
	<icon src="images/icons/60.jpg" platform="ios" width="60" height="60" />
	<icon src="images/icons/120.jpg" platform="ios" width="120" height="120" />
	
	<!-- iPad -->
	<icon src="images/icons/76.jpg" platform="ios" width="76" height="76" />
	<icon src="images/icons/152.jpg" platform="ios" width="152" height="152" />
	<icon src="images/icons/167.jpg" platform="ios" width="167" height="167" />
	
	<!-- Settings Icon -->
	<icon src="images/icons/29.jpg" platform="ios" width="29" height="29" />
	<icon src="images/icons/58.jpg" platform="ios" width="58" height="58" />
	<icon src="images/icons/87.jpg" platform="ios" width="87" height="87" />
	
	<!-- Spotlight Icon -->
	<icon src="images/icons/40.jpg" platform="ios" width="40" height="40" />
	<icon src="images/icons/80.jpg" platform="ios" width="80" height="80" />
	<icon src="images/icons/120.jpg" platform="ios" width="120" height="120" />
	
	<!-- iPad Spotlight and Settings Icon -->
	<icon src="images/icons/50.jpg" platform="ios" width="50" height="50" />

    <!-- iPhone and iPod touch -->
	<splash src="images/splash/Default.png" platform="ios" width="320" height="480" />
	<splash src="images/splash/Default@2x.png" platform="ios" width="640" height="960" />
	
	<!-- iPhone 5 / iPod Touch (5th Generation) -->
    <splash src="images/splash/Default-568h@2x.png" platform="ios" width="640" height="1136" />
	
	<!-- iPhone 6 -->
	<splash src="images/splash/Default-667h@2x.png" platform="ios" width="750" height="1334" />
	<splash src="images/splash/Default-Portrait-736h@3x.png" platform="ios" width="1242" height="2208" />
	<splash src="images/splash/Default-Landscape-736h@3x.png" platform="ios" width="2208" height="1242" />
	
	<!-- iPad -->
	<splash src="images/splash/Default-Portrait.png" platform="ios" width="768" height="1024" />
	<splash src="images/splash/Default-Landscape.png" platform="ios" width="1024" height="768" />
	
	<!-- Retina iPad -->
	<splash src="images/splash/Default-Portrait@2x.png" platform="ios" width="1536" height="2048" />
	<splash src="images/splash/Default-Landscape@2x.png" platform="ios" width="2048" height="1536" />
	
	<gap:config-file platform="ios" parent="ITSAppUsesNonExemptEncryption" mode="add">
		<false/>
	</gap:config-file>
</widget>